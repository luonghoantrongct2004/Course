@model Course
<link rel="stylesheet" href="~/adminassets/css/slick.html" />
<link rel="stylesheet" href="~/adminassets/css/output.css" />
<main class="w-full">
    <!-- write your code here-->
    <div class="p-6">
        <div class="flex flex-col justify-between gap-5 mb-6 sm:flex-row">
            <div>
                <h3 class="mb-1 text-xl font-semibold leading-6 text-slate-800">
                    Tổng quát khóa học
                </h3>
                <p class="text-sm text-slate-600">
                    Hãy xem những gì mới có trong khóa học này
                </p>
            </div>
            <div>
                <a href="/Admin/Course/Create"
                   class="flex items-center px-4 py-3 text-sm text-white rounded-lg shadow-xs gap bg-mainblack">
                    <svg width="20"
                         height="20"
                         viewBox="0 0 20 20"
                         fill="none"
                         xmlns="http://www.w3.org/2000/svg">
                        <path d="M10 5V15M15 10L5 10"
                              stroke="currentColor"
                              stroke-width="1.5"
                              stroke-linecap="round"
                              stroke-linejoin="round" />
                    </svg>
                    Thêm Khóa Học
                </a>
            </div>
        </div>
        <div class="flex flex-col gap-6 xl:flex-row">
            <div class="flex-1 p-5 bg-white rounded-lg">
                <div class="mb-6">
                    <img id="courseThumbnail" class="w-full rounded-lg" style="width: 660px;
height: 330px;" src="@Model.Image" alt="Course Thumbnail" />
                    <video id="lessonVideoPlayer" class="w-full rounded-lg" controls style="display: none; width: 660px;
    height: 330px;">
                        <source id="videoSource" src="" type="video/mp4" />
                        Your browser does not support the video tag.
                    </video>
                </div>

                <div>
                    <h3 class="mb-3 text-xl font-semibold text-mainblack">
                        @Model.Title
                    </h3>
                    <div class="flex items-center divide-x divide-violet-100">
                        <div class="flex items-center gap-1 px-2 pl-0">
                            <img src="~/admin/assets/img/courses/av-2.png"
                                 class="rounded-full w-7 h-7"
                                 alt="" />
                            <p class="text-sm font-semibold text-mainblack">
                                @Model.Author?.FullName
                            </p>
                        </div>
                        <div class="px-2">
                            <p class="text-sm text-mainblack">@Model.Category?.Name</p>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="border-b border-gray-200">
                        <nav class="flex -mb-px space-x-5" aria-label="Tabs">
