@model Order
<div class="p-6">
    <div class="flex flex-col justify-between gap-5 mb-6 sm:flex-row">
        <div>
            <h3 class="mb-1 text-xl font-semibold leading-6 text-slate-800">
                Chi tiết đơn hàng
            </h3>
            <p class="text-sm text-slate-600">
                Let’s check your update today
            </p>
        </div>
        <div>
            <a href="/admin/order"
               class="flex items-center px-4 py-3 text-sm text-white rounded-lg shadow-xs gap bg-primary">
                <svg width="24"
                     height="24"
                     viewBox="0 0 24 24"
                     fill="none"
                     xmlns="http://www.w3.org/2000/svg">
                    <path d="M19 11H9L12.29 7.71C12.3837 7.61704 12.4581 7.50644 12.5089 7.38458C12.5597 7.26272 12.5858 7.13201 12.5858 7C12.5858 6.86799 12.5597 6.73728 12.5089 6.61542C12.4581 6.49356 12.3837 6.38296 12.29 6.29C12.1026 6.10375 11.8492 5.99921 11.585 5.99921C11.3208 5.99921 11.0674 6.10375 10.88 6.29L6.59 10.59C6.21441 10.9633 6.00223 11.4704 6 12C6.00487 12.5261 6.21684 13.0291 6.59 13.4L10.88 17.7C10.9732 17.7926 11.0838 17.8659 11.2054 17.9157C11.3269 17.9656 11.4571 17.991 11.5885 17.9906C11.7199 17.9901 11.8499 17.9638 11.9712 17.913C12.0924 17.8623 12.2024 17.7882 12.295 17.695C12.3876 17.6018 12.4609 17.4912 12.5107 17.3696C12.5606 17.2481 12.586 17.1179 12.5856 16.9865C12.5851 16.8551 12.5588 16.7251 12.508 16.6038C12.4573 16.4826 12.3832 16.3726 12.29 16.28L9 13H19C19.2652 13 19.5196 12.8946 19.7071 12.7071C19.8946 12.5196 20 12.2652 20 12C20 11.7348 19.8946 11.4804 19.7071 11.2929C19.5196 11.1054 19.2652 11 19 11Z"
                          fill="currentColor" />
                </svg>
                Trở về
            </a>
        </div>
    </div>
    <div class="bg-white rounded-lg">
        <div class="border-b border-gray-200">
            <nav class="flex px-5 -mb-px space-x-12" aria-label="Tabs">
                <button class="py-5 pl-0 text-sm font-medium border-b-2 tab course-tab tab-active text-primary border-primary whitespace-nowrap"
                        aria-current="page"
                        data-tab="tab1">
                    Chi tiết đơn hàng
                </button>
                <button data-tab="tab2"
                        class="py-5 text-sm font-medium border-b-2 border-transparent tab course-tab hover:border-slate-300 text-slate-600 whitespace-nowrap hover:text-slate-700">
                    Khóa học
                </button>
               
            </nav>
        </div>
        <div class="p-5">
            <!-- Order Detail -->
            <div class="mt-6 tab-content active" id="tab1">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-xl font-semibold text-slate-600">
                            Chi tiết đơn hàng
                        </h3>
                    </div>
                    <div>
                        <button class="flex items-center gap rounded-lg py-2.5 px-4 gap-1 text-sm text-slate-600 border border-slate-200 shadow-xs">
                            <svg width="21"
                                 height="20"
                                 viewBox="0 0 21 20"
                                 fill="none"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                      clip-rule="evenodd"
                                      d="M13.3989 9.75503C13.6994 9.48146 14.1647 9.50325 14.4383 9.8037C14.7118 10.1041 14.6901 10.5695 14.3896 10.8431L10.4985 14.3861L6.60744 10.8431C6.30699 10.5695 6.2852 10.1041 6.55877 9.8037C6.83235 9.50325 7.29768 9.48146 7.59813 9.75503L9.76278 11.726V2.73574C9.76278 2.3294 10.0922 2 10.4985 2C10.9049 2 11.2343 2.3294 11.2343 2.73574V11.726L13.3989 9.75503ZM3.95455 14.3633C3.95455 13.9617 3.62893 13.6361 3.22727 13.6361C2.82561 13.6361 2.5 13.9617 2.5 14.3633V15.333C2.5 16.8058 3.69391 17.9997 5.16667 17.9997H15.8333C17.3061 17.9997 18.5 16.8058 18.5 15.333V14.3633C18.5 13.9617 18.1744 13.6361 17.7727 13.6361C17.3711 13.6361 17.0455 13.9617 17.0455 14.3633V15.333C17.0455 16.0025 16.5028 16.5451 15.8333 16.5451H5.16667C4.49723 16.5451 3.95455 16.0025 3.95455 15.333V14.3633Z"
                                      fill="#475569" />
                            </svg>
                            Export
                        </button>
                    </div>
                </div>
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="border-b border-slate-200">
                            <tr>
                                <th class="py-4 text-base font-medium text-left text-mainblack">
                                    Tên 
                                </th>
                                <th class="p-4 text-base font-medium text-left text-mainblack">
                                    Email
                                </th>
                                <th class="p-4 text-base font-medium text-left text-mainblack">
                                    Số điện thoại
                                </th>
                                <th class="p-4 text-base font-medium text-left text-mainblack">
                                    Vị trí
                                </th>
                            </tr>
                        </thead>
                        <tbody class="border-b divide-y border-slate-200 divide-slate-200">
                            <tr>
                                <td class="py-4 pr-4 whitespace-nowrap">
                                    <div class="flex items-center gap-3.5">
                                        <img src="@Model.User.Image"
                                             class="w-8 h-8 rounded-full shrink-0"
                                             alt="" />
                                        <p class="text-sm font-medium text-slate-600">
                                            @Model.User.FullName
                                        </p>
                                    </div>
                                </td>
                                <td class="p-4 text-sm font-medium text-slate-600 whitespace-nowrap">
                                    @Model.User.Email
                                </td>
                                <td class="p-4 text-sm font-medium text-slate-600 whitespace-nowrap">
                                    @Model.User.PhoneNumber
                                </td>
                                <td class="p-4 text-sm font-medium text-slate-600 whitespace-nowrap">
                                    @Model.User.Address
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="flex flex-col justify-between max-w-xl gap-5 py-5 sm:flex-row">
                    <div>
                        <h4 class="mb-4 text-xl font-semibold text-slate-600">
                            Phương thức thanh toán
                        </h4>
                        <ul class="space-y-2">
                            <li class="text-sm font-medium text-slate-600">
                                @Model.PaymentMethod
                            </li>
                            <li class="text-sm font-medium text-slate-600">
                                Mã đơn hàng : @Model.OrderID
                            </li>
                            <li class="text-sm font-medium text-slate-600">
                                Tiền : @Model.TotalAmount.ToString("N0")
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="p-5 border rounded-lg border-slate-200">
                    <div class="flex items-center justify-between mb-3">
                        <h3 class="text-xl font-semibold text-mainblack">
                            Chi tiết hóa đơn
                        </h3>
                    </div>
                    <div class="flex flex-col justify-between max-w-6xl gap-10 sm:flex-row">
                        <ul class="space-y-2">
                            <li>
                                <p class="text-sm font-medium text-mainblack">
                                    Tên người mua
                                    <span class="text-slate-600">@Model.User.FullName</span>
                                </p>
                            </li>
                            <li>
                                <p class="text-sm font-medium text-mainblack">
                                    Địa chỉ
                                    <span class="text-slate-600">@Model.User.Address</span>
                                </p>
                            </li>
                            <li>
                                <p class="text-sm font-medium text-mainblack">
                                    Số điện thoại
                                    <span class="text-slate-600">@Model.User.PhoneNumber</span>
                                </p>
                            </li>
                        </ul>
                        <ul class="space-y-2">
                            <li>
                                <p class="text-sm font-medium text-mainblack">
                                    Ngày tham gia:
                                    <span class="text-slate-600">
                                        @Model.User.DateJoined.ToString("dd/MM/yyyy")
                                    </span>
                                </p>
                            </li>
                            <li>
                                <p class="text-sm font-medium text-mainblack">
                                    Email:
                                    <span class="text-slate-600">@Model.User.Email</span>
                                </p>
                            </li>
                            <li>
                                <p class="text-sm font-medium text-mainblack">
                                    Mã người dùng:
                                    <span class="text-slate-600">@Model.User.Id</span>
                                </p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Order Detail -->
            <div class="hidden mt-6 tab-content" id="tab2">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-xl font-semibold text-slate-600">
                            Khóa học
                        </h3>
                    </div>
                </div>
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="border-b border-slate-200">
                            <tr>
                                <th class="py-4 text-base font-medium text-left text-mainblack">
                                    Khóa học
                                </th>
                                <th class="p-4 text-base font-medium text-left text-mainblack">
                                    Giá
                                </th>
                                <th class="p-4 text-base font-medium text-left text-mainblack">
                                    Tổng tiền 
                                </th>
                            </tr>
                        </thead>
                        <tbody class="border-b divide-y border-slate-200 divide-slate-200">
                            <tr> 
                                @foreach(var item in Model.OrderDetails)
                                    {
                                <td class="py-4 pr-4 whitespace-nowrap">
                                   
                                        <div class="flex items-center gap-3.5">
                                            <img src=" @item.Course.Image"
                                                 class="w-8 h-8 rounded-full shrink-0"
                                                 alt="" />
                                            <p class="text-sm font-medium text-slate-600">
                                                @item.Course.Title
                                            </p>
                                        </div>
                                </td>
                                <td class="p-4 text-sm font-medium text-slate-600 whitespace-nowrap">
                                    @item.CoursePrice
                                    </td>
                                }
                                <td class="p-4 text-sm font-medium text-slate-600 whitespace-nowrap">
                                    @Model.TotalAmount
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Invoice -->
            <div class="hidden mt-6 tab-content" id="tab3">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-xl font-semibold text-slate-600">
                            Course
                        </h3>
                    </div>
                    <div>
                        <button class="flex items-center gap rounded-lg py-2.5 px-4 gap-1 text-sm text-slate-600 border border-slate-200 shadow-xs">
                            <svg width="21"
                                 height="20"
                                 viewBox="0 0 21 20"
                                 fill="none"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                      clip-rule="evenodd"
                                      d="M13.3989 9.75503C13.6994 9.48146 14.1647 9.50325 14.4383 9.8037C14.7118 10.1041 14.6901 10.5695 14.3896 10.8431L10.4985 14.3861L6.60744 10.8431C6.30699 10.5695 6.2852 10.1041 6.55877 9.8037C6.83235 9.50325 7.29768 9.48146 7.59813 9.75503L9.76278 11.726V2.73574C9.76278 2.3294 10.0922 2 10.4985 2C10.9049 2 11.2343 2.3294 11.2343 2.73574V11.726L13.3989 9.75503ZM3.95455 14.3633C3.95455 13.9617 3.62893 13.6361 3.22727 13.6361C2.82561 13.6361 2.5 13.9617 2.5 14.3633V15.333C2.5 16.8058 3.69391 17.9997 5.16667 17.9997H15.8333C17.3061 17.9997 18.5 16.8058 18.5 15.333V14.3633C18.5 13.9617 18.1744 13.6361 17.7727 13.6361C17.3711 13.6361 17.0455 13.9617 17.0455 14.3633V15.333C17.0455 16.0025 16.5028 16.5451 15.8333 16.5451H5.16667C4.49723 16.5451 3.95455 16.0025 3.95455 15.333V14.3633Z"
                                      fill="#475569" />
                            </svg>
                            Export
                        </button>
                    </div>
                </div>
                <div class="flex flex-col justify-between gap-5 py-5 sm:flex-row">
                    <div class="flex-1">
                        <div class="flex flex-col gap-5 sm:flex-row">
                            <div class="flex flex-col items-center justify-center p-5 -space-y-3 sm:w-40 sm:h-40 bg-primary">
                                <h3 class="text-xl font-semibold text-white uppercase">
                                    INVOICE
                                </h3>
                                <img src="assets/img/logo/logo-opacity.png"
                                     alt="" />
                                <p class="text-base text-white">#790841</p>
                            </div>
                            <div class="flex-1 space-y-1">
                                <h4 class="font-medium text-slate-600">
                                    UStudy. +1
                                </h4>
                                <p class="text-sm text-slate-600">
                                    Russell st. 50, Boston, MA, USA, 02199
                                </p>
                                <p class="text-sm text-slate-600">(070) 123–4567</p>
                                <p class="text-sm text-slate-600">
                                    info@ustudy.com
                                </p>
                                <p class="text-sm text-slate-600">www.ustudy.com</p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <p class="mb-5 text-base text-slate-600">
                            September 12, 2023
                        </p>
                        <img src="assets/img/logo/logo-sm.svg" alt="" />
                    </div>
                </div>
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="border-b border-slate-200">
                            <tr>
                                <th class="py-4 text-base font-medium text-left text-slate-600">
                                    Course
                                </th>
                                <th class="p-4 text-base font-medium text-left text-slate-600">
                                    Price
                                </th>
                                <th class="p-4 text-base font-medium text-left text-slate-600">
                                    Quantity
                                </th>
                                <th class="p-4 text-base font-medium text-end text-slate-600">
                                    Total
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-y border-slate-200 divide-slate-200">
                            <tr>
                                <td class="py-4">
                                    <div class="flex items-center gap-3.5">
                                        <img src="assets/img/order/av-1.png"
                                             class="w-8 h-8 rounded-full shrink-0"
                                             alt="" />
                                        <p class="text-sm font-medium text-slate-600">
                                            CompTIA Systems Security+ Professional (CISSP)
                                        </p>
                                    </div>
                                </td>
                                <td class="p-4 text-sm font-medium text-slate-600">
                                    $2,500.00
                                </td>
                                <td class="p-4 text-sm font-medium text-slate-600">
                                    1
                                </td>
                                <td class="p-4 text-sm font-medium text-slate-600 text-end">
                                    $2,500.00
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4"
                                    class="p-4 text-sm text-right text-slate-600">
                                    <div class="flex justify-end gap-10">
                                        <div class="space-y-2">
                                            <p>Subtotal</p>
                                            <p>Tax(20%)</p>
                                            <p>Discount</p>
                                            <p>Total</p>
                                        </div>
                                        <div class="space-y-2">
                                            <p>$2,500.00</p>
                                            <p>$500.00</p>
                                            <p>-$100.00</p>
                                            <p>$2,900.00</p>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>