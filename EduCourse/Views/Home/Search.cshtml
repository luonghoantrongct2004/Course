<script>
    function filterCourses() {
        // Lấy danh sách các tùy chọn đã chọn
        let selectedCategories = Array.from(document.querySelectorAll('input[name="category"]:checked')).map(checkbox => checkbox.value);
        let selectedInstructors = Array.from(document.querySelectorAll('input[name="instructor"]:checked')).map(checkbox => checkbox.value);

        // Tạo query string từ các tùy chọn lọc
        let queryString = `?categories=${selectedCategories.join(',')}&instructors=${selectedInstructors.join(',')}`;

        // Điều hướng tới URL mới với các tham số lọc
        window.location.href = `/Home/Search${queryString}`;
    }

</script>
<script>
    function checkoutSingleCourse(courseId) {
        console.log(courseId);

        document.getElementById('loading-overlay').style.display = 'block';
        $.ajax({
            url: '/Cart/CheckoutSingleCourse',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(courseId),
            success: function (response) {
                var stripe = Stripe('pk_test_51P7bRY1vJ264C6HKaJUP0nrssbUv01bbiRYNuUhbQTM2TOZEZsF6fApNwxnuylG7VYnphnJlksYfpt4y64pX7AWA002OEkCN6X');
                stripe.redirectToCheckout({ sessionId: response.sessionId });
            },
            error: function () {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi',
                    text: 'Có lỗi xảy ra khi thanh toán. Vui lòng thử lại.'
                });

                document.getElementById('loading-overlay').style.display = 'none';
            }
        });
    }
</script>

<script>
    function addToCart(courseId) {
        $.ajax({
            url: '/Cart/AddToCart',
            type: 'POST',
            data: {
                courseId: courseId
            },
            success: function (response) {
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Thành công',
                        text: response.message,
                        showConfirmButton: false,
                        timer: 1500
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi',
                        text: response.message
                    });
                }
            },
            error: function () {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi',
                    text: 'Đã xảy ra lỗi. Vui lòng thử lại sau.'
                });
            }
        });
    }
</script>

