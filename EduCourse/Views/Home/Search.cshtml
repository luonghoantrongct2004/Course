@model EduCourse.Models.SearchViewModel

<section class="course-content">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">

                <div class="showing-list">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="d-flex align-items-center">
                                <div class="view-icons">
                                    <a href="javascript:void(0);" class="grid-view" onclick="toggleView('grid')">
                                        <i class="feather-grid"></i>
                                    </a>
                                    <a href="javascript:void(0);" class="list-view active" onclick="toggleView('list')">
                                        <i class="feather-list"></i>
                                    </a>
                                    <script>
                                        function toggleView(view) {
                                            var gridContainer = document.getElementById('grid');
                                            var listContainer = document.getElementById('list');

                                            if (view === 'grid') {
                                                gridContainer.style.display = 'flex'; // Hiển thị chế độ xem lưới
                                                listContainer.style.display = 'none'; // Ẩn chế độ xem danh sách
                                            } else if (view === 'list') {
                                                listContainer.style.display = 'flex'; // Hiển thị chế độ xem danh sách
                                                gridContainer.style.display = 'none'; // Ẩn chế độ xem lưới
                                            }

                                            // Cập nhật class "active" cho nút để làm nổi bật nút đang chọn
                                            document.querySelector('.grid-view').classList.toggle('active', view === 'grid');
                                            document.querySelector('.list-view').classList.toggle('active', view === 'list');
                                        }
                                    </script>
                                    <style>

                                        #grid {
                                            display: none; /* Ẩn grid view mặc định */
                                        }
                                    </style>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="show-filter add-course-info ">
                                <form method="get" action="@Url.Action("Search", "Home")">
                                    <div class="row gx-2 align-items-center">
                                        <div class="col-md-12 col-item">
                                            <div class="search-group">
                                                <i class="feather-search"></i>
                                                <input type="text" class="form-control" name="name" placeholder="Tìm kiếm tên khóa học...." value="@Model.CourseName">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row list-view" id="list">
                    @if (Model.Courses != null && Model.Courses.Count > 0)
                    {
                        foreach (var course in Model.Courses)
                        {
                            bool isPurchased = ViewBag.PurchasedCourses.Contains(course.CourseID);
                            <div class="course-item col-lg-12 col-md-12 d-flex">
                                <div class="course-box course-design list-course d-flex">
                                    <div class="product">
                                        <div class="product-img">
                                            <a href="@Url.Action("Details", "Courses", new { id = course.CourseID })">
                                                <img class="img-fluid" alt="Img" src="@course.Image">
                                            </a>

                                            <div class="price">
                                            @{
                                                var price = course.Price * (1 - course.Discount / 100.0M);
                                            }
                                            @if (price <= 0)
                                            {
                                                <h3>Miễn phí</h3>
                                            }
                                            else
                                            {
                                                    <h3>@price.ToString("N0")đ <span>@course.Price.ToString("N0")đ</span></h3>
                                            }
                                            </div>
                                        </div>
                                        <div class="product-content">
                                            <div class="head-course-title">
                                                <h3 class="title">
                                                    <a href="@Url.Action("Detail", "Home", new { id = course.CourseID })">
                                                        @course.Title
                                                    </a>
                                                </h3>
                                                <div class="all-btn all-category d-flex align-items-center">
                                                   
                                                    @if (isPurchased)
                                                    {
                                                        <a href="javascript:void(0);" class="btn btn-primary">
                                                                     Đã mua
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        if (User.Identity.IsAuthenticated)
                                                        {
                                                            <a href="javascript:void(0);" class="btn btn-primary" onclick="checkoutSingleCourse(@course.CourseID)">
                                                                Thanh toán
                                                            </a>
                                                        }else{
                                                            <a href="/auth/login" class="btn btn-primary">
                                                                Thanh toán
                                                            </a>
                                                        }
                                                    }
                                                </div>
                                            </div>
                                            <div class="course-info border-bottom-0 pb-0 d-flex align-items-center">
                                                <div class="rating-img d-flex align-items-center">
                                                    <img src="~/assets/img/icon/icon-01.svg" alt="Img">
                                                    <p>@course?.Chapters?.Sum(l => l.Lessons.Count()) bài học</p>
                                                </div>
                                                <div class="course-view d-flex align-items-center">
                                                    <img src="~/assets/img/icon/icon-02.svg" alt="Img">
                                                    @{
                                                        var chapters = course?.Chapters?.ToList();
                                                        double totalCourseDuration = chapters?
                                                        .Sum(chapter => chapter.Lessons.Sum(lesson => lesson.Duration)) ?? 0;

                                                        int hours = (int)(totalCourseDuration / 3600);
                                                        int minutes = (int)((totalCourseDuration % 3600) / 60);
                                                        int seconds = (int)(totalCourseDuration % 60);
                                                    }
                                                    <p>
                                                        @if (hours > 0)
                                                        {
                                                            @($"{hours} giờ{(hours > 1 ? "" : "")} ")
                                                        }
                                                        @if (minutes > 0)
                                                        {
                                                            @($"{minutes} phút{(minutes > 1 ? "" : "")} ")
                                                        }
                                                        @if (seconds > 0)
                                                        {
                                                            @($"{seconds} giây{(seconds > 1 ? "" : "")}")
                                                        }
                                                        @if (hours == 0 && minutes == 0 && seconds == 0)
                                                        {
                                                            @("0 giây")
                                                        }
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="course-group d-flex mb-0">
                                                <div class="course-group-img d-flex">
                                                    <a >
                                                        <img src="/Lotus.png" alt="Img" class="img-fluid">
                                                    </a>
                                                    <div class="">
                                                        <h6><a >@course.Author.FullName</a></h6>
                                                    </div>
                                                </div>
                                                <div class="course-share d-flex align-items-center justify-content-center">
                                                    @if (User.Identity.IsAuthenticated)
                                                    {
                                                       
                                                        if (isPurchased == false)
                                                        {
                                                            <a href="javascript:void(0);" class="btn btn-wish w-100" onclick="addToCart(@course.CourseID)">
                                                                Thêm vào giỏ
                                                            </a>
                                                        }else{
                                                                <a href="/home/detail?id=@course.CourseID" class="btn btn-wish w-100">
                                                                Xem chi tiết
                                                            </a>
                                                        }
                                                    }else{
                                                        <a href="/auth/login" class="btn btn-wish w-100">
                                                            Thêm vào giỏ
                                                        </a>
                                                    }
                                                   
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-lg-12">
                            <p>Không có khóa học nào.</p>
                        </div>
                    }
                </div>
