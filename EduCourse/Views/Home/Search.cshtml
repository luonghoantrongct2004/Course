                                            <div class="all-btn all-category d-flex align-items-center">
                                                @{
                                                    bool isPurchased = ViewBag.PurchasedCourses.Contains(course.CourseID);
                                                }
                                                @if (isPurchased)
                                                {
                                                    <a href="javascript:void(0);" class="btn btn-enroll w-100">
                                                        <i class="feather-shopping-cart"></i> Đã mua
                                                    </a>
                                                }
                                                else
                                                {
                                                    if (User.Identity.IsAuthenticated)
                                                    {
                                                        <a href="javascript:void(0);" class="btn btn-primary" onclick="checkoutSingleCourse(@course.CourseID)">
                                                            Thanh toán
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a href="/auth/login" class="btn btn-primary">
                                                            Thanh toán
                                                        </a>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-lg-12">
                            <p>Không có khóa học nào.</p>
                        </div>
                    }
                </div>
            </div>

            <div class="col-lg-3 theiaStickySidebar">
                <div class="filter-clear">
                    <div class="clear-filter d-flex align-items-center">
                        <h4><i class="feather-filter"></i>Filters</h4>
                        <div class="clear-text">
                            <p><a href="@Url.Action("Search", new { courseName = "", categoryName = "", instructorName = "", price = "" })">CLEAR</a></p>
                        </div>
                    </div>

                    <!-- Phần lọc danh mục khóa học -->
                    <div class="card search-filter categories-filter-blk">
                        <div class="card-body">
                            <div class="filter-widget mb-0">
                                <div class="categories-head d-flex align-items-center">
                                    <h4>Course categories</h4>
                                    <i class="fas fa-angle-down"></i>
                                </div>
                                <div>
                                    @if (Model.Categories != null && Model.Categories.Any())
                                    {
                                        foreach (var category in Model.Categories)
                                        {
                                            <label class="custom_check">
                                                <input type="checkbox" name="category" value="@category.Name"
                                                       onchange="filterCourses()" @(Model.CategoryName.Contains(category.Name) ? "checked" : "")>
                                                <span class="checkmark"></span> @category.Name
                                            </label>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Phần lọc giảng viên -->
                    <div class="card search-filter">
                        <div class="card-body">
                            <div class="filter-widget mb-0">
                                <div class="categories-head d-flex align-items-center">
                                    <h4>Instructors</h4>
                                    <i class="fas fa-angle-down"></i>
                                </div>
                                <div>
                                    @if (Model.Instructors != null && Model.Instructors.Any())
                                    {
                                        foreach (var instructor in Model.Instructors)
                                        {
                                            <label class="custom_check">
                                                <input type="radio" name="instructor" value="@instructor.FullName"
                                                       onchange="filterCourses()" @(Model.InstructorName.Contains(instructor.FullName) ? "checked" : "")>
                                                <span class="checkmark"></span> @instructor.FullName
                                            </label>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <ul class="pagination lms-page">
                    <!-- Nút "Previous" chỉ hiện khi không phải là trang đầu -->
                    @if ((int)ViewData["CurrentPage"] > 1)
                    {
                        <li class="page-item prev">
                            <a class="page-link" href="javascript:void(0)" onclick="navigatePage('@((int)ViewData["CurrentPage"] - 1)')">
                                <i class="fas fa-angle-left"></i>
                            </a>
                        </li>
                    }

                    <!-- Hiển thị các số trang -->
                    @for (var i = 1; i <= (int)ViewData["TotalPages"]; i++)
                    {
                        <li class="page-item @(i == (int)ViewData["CurrentPage"] ? "active" : "")">
                            <a class="page-link" href="javascript:void(0)" onclick="navigatePage('@i')">@i</a>
                        </li>
                    }

                    <!-- Nút "Next" chỉ hiện khi không phải là trang cuối -->
                    @if ((int)ViewData["CurrentPage"] < (int)ViewData["TotalPages"])
                    {
                        <li class="page-item next">
                            <a class="page-link" href="javascript:void(0)" onclick="navigatePage('@((int)ViewData["CurrentPage"] + 1)')">
                                <i class="fas fa-angle-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>

    </div>

</section>
